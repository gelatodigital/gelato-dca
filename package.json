{
  "name": "@gelato-krystal/monorepo",
  "version": "1.0.0",
  "keywords": [
    "ethereum",
    "react",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "hardhat:run-compile": "yarn workspace @gelato-krystal/hardhat compile",
    "hardhat:run-test": "yarn workspace @gelato-krystal/hardhat test",
    "react-app:build": "yarn workspace @gelato-krystal/react-app build",
    "react-app:eject": "yarn workspace @gelato-krystal/react-app eject",
    "react-app:ipfs": "yarn workspace @gelato-krystal/react-app ipfs",
    "react-app:start": "yarn workspace @gelato-krystal/react-app start",
    "react-app:test": "yarn workspace @gelato-krystal/react-app test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {

  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,sol,json,css,md}": "prettier --write"
  },
  "dependencies": {
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "eslint-config-prettier": "^7.1.0"

  }
}
